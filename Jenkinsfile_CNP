#!groovy
import uk.gov.hmcts.contino.AppPipelineDsl

properties(
  [
    [
      $class       : 'GithubProjectProperty',
      projectUrlStr: 'https://github.com/hmcts/jps-judicial-payment-service'
    ],
    pipelineTriggers([[$class: 'GitHubPushTrigger']])
  ]
)

@Library("Infrastructure")
import uk.gov.hmcts.contino.AppPipelineConfig
import uk.gov.hmcts.contino.GradleBuilder

def type = "java"
def product = "jps"
def component = "judicial-payment-service"
def branchesToSync = ['demo', 'ithc', 'perftest']

GradleBuilder builder = new GradleBuilder(this, product)

def vaultOverrides = [
  'preview': 'aat',
]

def secrets = [
  'rpx-${env}': [

  ],
  'ccd-${env}': [

  ],
  'jps-aat': [
    secret('jps-judicial-payment-service-s2s-secret', 'IDAM_KEY_JPS_JUDICIAL_PAYMENT_SERVICE'),
    secret('idam-jps-judicial-payment-service-client-secret', 'JPS_JUDICIAL_PAYMENT_SERVICE_IDAM_CLIENT_SECRET'),
    secret('idam-jps-system-username', 'IDAM_JPS_SYSTEM_USERNAME'),
    secret('idam-jps-system-password', 'IDAM_JPS_SYSTEM_PASSWORD')
  ],
  's2s-${env}': [

  ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [$class     : 'AzureKeyVaultSecret',
   secretType : 'Secret',
   name       : secretName,
   version    : '',
   envVariable: envVar
  ]
}

def pipelineConf = new AppPipelineConfig()
pipelineConf.vaultSecrets = secrets

withPipeline(type, product, component) {
  overrideVaultEnvironments(vaultOverrides)
  loadVaultSecrets(secrets)
  enableDbMigration('jps')
  syncBranchesWithMaster(branchesToSync)
  enableAksStagingDeployment()
  disableLegacyDeployment()

  afterAlways('test') {
    builder.gradle('--info --rerun-tasks integration')
    // hmcts/cnp-jenkins-library may fail to copy artifacts after checkstyle error so repeat command (see /src/uk/gov/hmcts/contino/GradleBuilder.groovy)
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/reports/checkstyle/*.html'
  }

  afterAlways('functionalTest:preview') {
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/Report for Functional Tests/**/*'
  }

  afterAlways('functionalTest:aat') {
    steps.archiveArtifacts allowEmptyArchive: true, artifacts: '**/Report for Functional Tests/**/*'
  }
}
